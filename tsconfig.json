{
  "include": ["src/*.ts", "src/*.json"],
  "compilerOptions": {
    "composite": true,
    "importHelpers": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "target": "es2019",
    "sourceMap": true
  }
}
